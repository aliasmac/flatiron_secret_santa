<h1>Welcome to Flatiron's Secret Santa <%= "#{current_user.name}!" %> </h1>


<%= link_to "Create a Secret Santa group!", new_group_path %>
<%= link_to "Add gift to your wishlist", new_gift%>

<% if current_user.gifts > 0 %>
  <h1>Your wishlist</h1>
  <ul>
    <% @gifts.each do |gift| %>
      <li><%= link_to gift.name, gift %></li>
      <%= link_to "Edit Gift", edit_gift_path(gift) %>
      <%= form_tag gift_path(gift), method: "delete" do  %>
        <%= submit_tag "Delete Gift" %>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <h1>Your wishlist is empty!</h1>
<% end %>
